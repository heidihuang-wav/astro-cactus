---
import { Image } from "astro:assets";
import astronautImage from "src/assets/astronaut.png";
import HeroImage from "src/components/hero-image.astro";
import Starfield from "src/components/starfield.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2 class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end">
      <div class="font-inter text-center font-extrabold tracking-tighter text-5xl md:text-8xl">
        HiðŸ‘‹, <br>I'm <span class="gradient-text">Heidi</span>
      </div>
      <div class="text-base text-center tracking-wide">
        Welcome to my corner of the internet
      </div>
    </h2>
    <div id="astronaut" class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start animate-float">
      <Image
        class="h-full w-full object-cover"
        src={astronautImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="A floating astronaut in a space suit"
      />
    </div>
  </div>

  <!-- Add the scroll indicator here -->
  <div class="container_mouse text-center text-mouse-gray font-bold uppercase pt-8 cursor-pointer absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <div class="mouse-btn mx-auto w-8 h-16 sm:w-10 sm:h-20 border-2 sm:border-4 border-mouse-gray rounded-[30px] flex">
      <span class="block w-4 h-4 sm:w-5 sm:h-5 m-auto bg-gradient-to-b from-mouse-gray to-[rgb(123,124,124)] rounded-full animate-scroll">
      </span>
    </div>
    <span class="text-sm sm:text-base">Scroll Down</span>
  </div>
</section>